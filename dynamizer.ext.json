{
  "type": "CityJSONExtension",
  "name": "dynamizer",
  "description": "Extension to model dynamic attributes",
  "uri": "https://github.com/1khawla/CityJSON-Dynamizer/blob/main/dynamizer.ext.json",
  "version": "1.0",
  "versionCityJSON": "1.1",
  "definitions": {
    "SensorConnection": {
      "properties": {
        "sensorId": {
          "type": "string"
        },
        "serviceType": {
          "type": "string"
        },
        "linkToObservation": {
          "uri": "uri-reference"
        },
        "linkToSensor": {
          "uri": "uri-reference"
        },
        "sensorLocation": {
          "$ref": "cityobjects.schema.json#/_AbstractCityObject"
        }
      }
    },
    "_AbstractTimeseries": {
      "type": "object",
      "properties": {
        "timeseries": {
          "description": "TO BE COMPLETED"
        }
      }
    }
  },
  "extraRootProperties": {},
  "extraAttributes": {
    "_AbstractCityObject": {
      "+Dynamizer": {
        "type": "object",
        "properties": {
          "attributeRef": {
            "description": "It refers to a specific attribute of a specific city object by using an XPath expression. This is the static property that should be overridden by timeseries data",
            "uri": "uri-reference"
          },
          "startTime": {
            "type": "TM_Position"
          },
          "endTime": {
            "type": "TM_Position"
          },
          "linkToSensor": {
            "$ref": "#/definitions/SensorConnection"
          },
          "dynamicData": {
            "$ref": "#/definitions/AbstractTimeSeries"
          }
        }
      }
    }
  },
  "extraCityObjects": {}
}
